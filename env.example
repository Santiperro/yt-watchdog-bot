# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# YouTube API Configuration
# Get from Google Cloud Console: https://console.cloud.google.com/
YOUTUBE_CLIENT_ID=your_youtube_client_id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REDIRECT_URI=http://localhost:8080/oauth/callback

# Database Configuration
DATABASE_URL=sqlite:///./bot.db

# Web Server Configuration (for OAuth callbacks)
WEB_HOST=0.0.0.0
WEB_PORT=8080

# Access Control Configuration
ALLOWED_USERS=  # Telegram user_id comma-separated (leave empty for all users)

# Security Configuration
SECRET_KEY=your_secret_key_for_encryption  # For token encryption in DB

# Logging Configuration
LOG_LEVEL=INFO

# Optional: Production settings
# DATABASE_URL=postgresql://user:password@localhost/yt_watchdog_bot
# WEB_HOST=your_domain.com
# WEB_PORT=443 